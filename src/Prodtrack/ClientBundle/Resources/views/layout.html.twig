<!DOCTYPE html>

<html>
<head>
    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}"/>

    {% stylesheets
        'bundles/client/css/main.css'
        'bundles/client/css/bootstrap.css'
        filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    <title>Work tracker</title>
</head>
<body class="w-content" ng-app="WorkTrackClient">
<div class="container">
    <header>
        <h1>Deep work tracker</h1>
    </header>
    <nav class="w-nav">
        <ul class="nav nav-pills">
            <li class="active"><a href="#">Status</a></li>
            <li><a href="#">Activities</a></li>
            <li><a href="#">Account</a></li>
        </ul>
    </nav>


    <div ng-controller="AuthCtrl">
        <button class="btn btn-default" ng-click="open()">Open me!</button>


    </div>
    <footer class="w-footer">
        <p>Work tracker by BB</p>
    </footer>
</div>

<script type="text/ng-template" id="login.html">
    <div class="modal-header">
        <h2>Login</h2>
    </div>
    <div class="modal-body">
        <div ng-show="login">
            <form method="POST" class="form-horizontal">
                <div class="form-group">
                    <label for="username" class="col-sm-2 control-label">Username</label>

                    <div class="col-sm-10">
                        <input ng-model="account.username" type="text" class="form-control" id="username"
                               placeholder="Username">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">Password</label>

                    <div class="col-sm-10">
                        <input ng-model="account.password" type="password" class="form-control" id="password"
                               placeholder="Password">
                    </div>
                </div>
                <div class="form-error text-center" ng-show="accountInvalid">
                    The username-password combination is not correct.
                </div>
                <div class="form-error text-center" ng-show="unknownError">
                    Something went wrong while trying to authenticate you. Please try again later.
                </div>
            </form>
            <div class="text-center">
                or
                <a href='#' ng-click="showCreateAccount()">create an account</a>.
            </div>
        </div>
        <div ng-show="create">
            <form method="POST" class="form-horizontal">
                <div class="form-group">
                    <label for="email" class="col-sm-4 control-label">Email</label>

                    <div class="col-sm-8">
                        <input ng-model="newAccount.email" type="text" class="form-control" id="email"
                               placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    <label for="username_new" class="col-sm-4 control-label">Username</label>

                    <div class="col-sm-8">
                        <input ng-model="newAccount.username" type="text" class="form-control" id="username_new"
                               placeholder="Username">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password_new" class="col-sm-4 control-label">Password</label>

                    <div class="col-sm-8">
                        <input ng-model="newAccount.password" type="password" class="form-control" id="password_new"
                               placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password_confirm" class="col-sm-4 control-label">Confirm Password</label>

                    <div class="col-sm-8">
                        <input ng-model="newAccount.confirmPassword" type="password" class="form-control"
                               id="password_confirm" placeholder="Confirm password">
                    </div>
                </div>
            </form>
            <div class="text-center">
                or
                <a href='#' ng-click="showLogin()">login</a>.
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button ng-show="login" class="btn btn-primary" ng-click="login()">Login</button>
        <button ng-show="create" class="btn btn-primary" ng-click="createAccount()">Create</button>
        <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
    </div>
</script>

{% block javascripts %}
    {% javascripts
    '@ClientBundle/Resources/public/vendor/jquery/dist/jquery.js'
    '@ClientBundle/Resources/public/vendor/angular/angular.js'
    '@ClientBundle/Resources/public/js/app.js'
    '@ClientBundle/Resources/public/js/services.js'
    '@ClientBundle/Resources/public/vendor/angular-bootstrap/ui-bootstrap.js'
    '@ClientBundle/Resources/public/vendor/angular-bootstrap/ui-bootstrap-tpls.js'
    '@ClientBundle/Resources/public/js/controllers.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>
